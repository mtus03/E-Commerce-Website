<%- include('../layout/header.ejs') %>
<%- include('../layout/navbar.ejs') %>

<section class="breadcrumb-section">
    <h2 class="sr-only">Site Breadcrumb</h2>
    <div class="container">
        <div class="breadcrumb-contents">
            <nav aria-label="breadcrumb">
                <ol class="breadcrumb">
                    <li class="breadcrumb-item"><a href="/">Home</a></li>
                    <li class="breadcrumb-item active">Đăng Nhập</li>
                </ol>
            </nav>
        </div>
    </div>
</section>

<main class="page-section inner-page-sec-padding-bottom">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-6">
                <div class="login-form">
                    <h4 class="login-title">Welcome Back</h4>
                    <p><span class="font-weight-bold">My Customer </span></p>
                    <div class="row">
                        <div class="col-12 mb-4">
                            <label for="email">Nhập địa chỉ email của bạn...</label>
                            <input class="form-control" type="email" id="email" placeholder="Nhập địa chỉ email của bạn...">
                        </div>
                        <div class="col-12 mb-4">
                            <label for="password">Mật khẩu</label>
                            <input class="form-control" type="password" id="password" placeholder="Nhập mật khẩu của bạn">
                        </div>
                        <div class="col-12">
                            <button id="Login" class="btn btn-primary w-100">Đăng nhập</button>
                        </div>
                    </div>
                    <div class="mt-3 text-center">
                        <a href="/forgot-password" id="forgot-password" style="font-size: 16px; color: rgb(0, 0, 0);">Quên mật khẩu?</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</main>

<script>
    // Gửi Data
    $("#Login").on("click", function () {
        $.ajax({
            type: "POST",
            dataType: "JSON",
            url: "/postLoginUser",
            data: {
                type: 'Login',
                email: $("#email").val(),
                password: $("#password").val(),
            },
            success: function (res) {
                Swal.fire({
                    icon: res.status === true ? "success" : "error",
                    title: 'Thông Báo',
                    text: res.message
                }).then((result) => {
                    if (res.status === true) {
                        window.location.href = "/";
                    } else {
                        window.location.href = "/login";
                    }
                });

            },
            error: function (xhr, status, error) {
                console.error(error);
            },
        });
    });
</script>

